
@{
    ViewBag.Title = "List of Teams";
}

<h2>@ViewBag.Title</h2>
<hr />

<h3>@ViewBag.message</h3>

@foreach (MyJira.Models.Team team in ViewBag.Teams)
{
    <div class="panel panel-default">
        <div class="panel-heading">@team.TeamName</div>
        <div class="panel-body">
            @using (Html.BeginForm(actionName: "Delete", controllerName: "Team", method: FormMethod.Post, routeValues: new { id = team.TeamId }))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <br />
                <button class="btn btn-success" type="submit">Delete Team</button>
            }
            <a class="btn btn-sm btn-success" href="/Team/Edit/@team.TeamId">Edit Team</a>
            <a class="btn btn-sm btn-success" href="/Team/Show/@team.TeamId">View more</a>
        </div>
    </div>
}

<br />
<a class="btn btn-success" href="/Team/New">Add Team</a>
<br />
