@model MyJira.Models.Team

<div id="myjira">
    <div class="row" id="add-form">
        @using (Html.BeginForm(actionName: "Edit", controllerName: "Team"))
        {
            @Html.HttpMethodOverride(HttpVerbs.Put)
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)
            <br />
            @Html.Label("Name", "Team Name")
            <br />
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
            <br /> <br />

            <button class="btn btn-sm btn-success add-button" type="submit">Submit changes</button>
        }
    </div>
</div>