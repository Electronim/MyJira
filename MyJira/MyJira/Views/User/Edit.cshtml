@model MyJira.Models.ApplicationUser

@{
    ViewBag.Title = "Dev Edit";
}

<h2>@ViewBag.Titlu</h2>

<form method="post" action="/User/Edit/@Model.Id">

    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.Id)
    <br />
    @Html.Label("UserName", "Full Name")
    <br />
    @Html.EditorFor(m => m.UserName)
    @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
    <br /> <br />

    @Html.Label("Email", "Email")
    <br />
    @Html.EditorFor(m => m.Email)
    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("PhoneNumber", "Numar telefon")
    <br />
    @Html.EditorFor(m => m.PhoneNumber)
    <br /><br />


    <label>Select Team</label>
    @Html.DropDownListFor(m => m.TeamId, new SelectList(Model.AllTeams, "Value", "Text", Model.Team.TeamName), "Team", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.TeamId, null, new { @class = "text-danger" })
    <br />

    <i class="glyphicon glyphicon-th-list"></i>
    <label>Select Role</label>
    @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value", "Text", (string)ViewBag.userRole), "Role", new { @class = "form-control" })
    <br />

    <button class="btn btn-sm btn-success" type="submit">Submit changes</button>

</form>