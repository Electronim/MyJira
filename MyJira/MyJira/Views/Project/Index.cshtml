@{
    ViewBag.Title = "List of Projects";
}

<h2>@ViewBag.Title</h2>
<hr />

<h3>@ViewBag.message</h3>

@foreach (MyJira.Models.Project project in ViewBag.Projects)
{
    <div class="panel panel-default">
        <div class="panel-heading">@project.Name</div>
        
        <div class="panel-body">
            Project description: <strong>@project.Description</strong>
        </div>

        <div class="panel-footer">
            @using (Html.BeginForm(actionName: "Delete", controllerName: "Project", method: FormMethod.Post, routeValues: new { id = project.Id }))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <br />
                <button class="btn btn-success" type="submit">Delete Project</button>
            }
        </div>
    </div>
}

<br />
<a class="btn btn-success" href="/Project/New">Add Project</a>
<br />