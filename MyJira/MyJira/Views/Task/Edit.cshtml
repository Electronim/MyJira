@model MyJira.Models.Task

<div id="myjira">
    <div class="row" id="add-form">

        @using (Html.BeginForm(actionName: "Edit", controllerName: "Task"))
        {
            @Html.HttpMethodOverride(HttpVerbs.Put)
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.ReporterId)
            @Html.HiddenFor(m => m.StartTime)
            @Html.HiddenFor(m => m.ProjectId)
            @Html.HiddenFor(m => m.TeamId)

            @:<h3><span class="label label-default">@ViewBag.Project.Name</span></h3>
            <br/>

            @Html.Label("Title", "Title")
            <br />
            @Html.EditorFor(m => m.Title)
            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
            <br />

            @Html.Label("Description", "Description")
            <br />
            @Html.EditorFor(m => m.Description)
            @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
            <br />

            <i class="glyphicon glyphicon-th-list"></i> <label>Status</label>
            @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.allStatuses, "Value", "Text"), null, new { @class = "form-control" })
            <br />

            <i class="glyphicon glyphicon-th-list"></i> <label>Assignee</label>
            @Html.DropDownListFor(m => m.AssigneeId, new SelectList(ViewBag.allDevs, "Value", "Text"), "None", new { @class = "form-control" })
            <br />

            <button class="btn btn-sm btn-success add-button" type="submit">Submit changes</button>
        }
    </div>
</div>